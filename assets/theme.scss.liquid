  }
}

h2 {
  font-size: em(floor($font-size-base * 1.25));
  text-transform: uppercase;
  letter-spacing: 0.1em;

  @include media-query($small) {
    font-size: em(floor(($font-size-base * 1.25) * 0.9));
  }
}

h3 {
  font-size: em(floor($font-size-base * 1.25));
  text-transform: none;
  letter-spacing: 0;

  @include media-query($small) {
    font-size: em(floor($font-size-base * 1.25) * 0.9);
  }
}

