  }
}

h5 {
  font-size: em(floor($font-size-base * 0.9375));

  @include media-query($small) {
    font-size: em(floor(($font-size-base * 0.9375) * 0.9));
  }
}

h6 {
  font-size: em(floor($font-size-base * 0.875));

