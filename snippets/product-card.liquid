<div class="slick-slider__item">
  <a href="{{ product.url }}" class="slick-slider__card" tabindex="-1">
    <div class="slick-slider__item-img-wrapper">
      <img src="{{ product.featured_image.src | img_url: '500x' }}" alt="{{ product.featured_image.alt }}">
      <div class="slick-slider__item-product-title">{{ product.title }}</div>
      {% include 'flair-product-badges', flair_css_class: 'flair-inline' %}
      <div class="slick-slider__item-product-price">
        <div class="slick-slider__item-product-sale-price">
          {% include 'product-price' %}
        </div>
      </div>
    </div>
  </a>
</div>