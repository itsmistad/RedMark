{% include 'icon-socials' %}

<footer class="site-footer one ticket_footer" role="contentinfo">
  {% include 'trust-badges' %}
  <div class="page-width site-footer__main">
    <div class="grid grid--no-gutters">
      <div
        class="grid__item medium-up--one-third">
        <div class="site-footer__logo-wrapper">
          <a href="{{ shop.url }}" itemprop="url" class="site-footer__logo-image">
            <img srcset="{{ section.settings.logo | img_url : 'master' }} "
                   alt="{{ section.settings.logo.alt | default: shop.name }}"
                   id="bottomlogo" 
                   class="bottomlogo"
                   itemprop="logo">
          </a>
        </div>
        <ul
          class="site-footer__linklist support-info">
          <li class="sty_one_men_one site-footer__linklist-item">
            <a href="mailto:{{ section.settings.footer_support_email }}">
              {{ section.settings.footer_support_email }}
            </a>
          </li>
          <li class="sty_one_men_one site-footer__linklist-item">
            <a href="tel:{{ section.settings.footer_support_phone_normalized }}">
              {{ section.settings.footer_support_phone }}
            </a>
          </li>
          <li class="sty_one_men_one site-footer__linklist-item">
            <p style="color:#000;">{{ section.settings.footer_support_hours }}</p>
          </li>
        </ul>
        {% include 'payment-badges' %}
      </div>
      <div
        class="grid__item{% if section.settings.footer_linklist_two != blank %} medium-up--one-sixth{% elsif section.settings.footer_linklist_two == blank %} medium-up--one-half{% else %} text-center{% endif %}">
        {%- assign footer_linklist = section.settings.footer_linklist -%}
        {% if linklists[footer_linklist].links.size > 0 %}
        <h3 class="sty_one_men_one_head">{{ section.settings.footer_linklist_title }}</h3>
        <ul
          class="site-footer__linklist">
          {% for link in linklists[footer_linklist].links %}
          <li class="sty_one_men_one site-footer__linklist-item">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>

      <div
        class="grid__item{% if section.settings.footer_linklist != blank %} medium-up--one-sixth{% elsif section.settings.footer_linklist == blank %} medium-up--one-half{% else %} text-center{% endif %}">
        {%- assign footer_linklist_two = section.settings.footer_linklist_two -%}
        {% if linklists[footer_linklist_two].links.size > 0 %}
        <h3 class="sty_one_men_two_head">{{ section.settings.footer_linklist_two_title }}</h3>
        <ul
          class="site-footer__linklist">
          {% for link in linklists[footer_linklist_two].links %}
          <li class="sty_one_men_two site-footer__linklist-item">
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>

      <div class="grid__item medium-up--one-third" id="newsletter">
        <h3 class="sty_one_men_one_news">{{ section.settings.foot_newstitle }}</h3>
        <div class="site-footer__newsletter">
          <label for="Email" class="h4 sty_one_men_one_news_text">{{ section.settings.foot_news_content }}</label>
          <div class="newsletter_footer sty">
            {% include 'news-footer' %}
          </div>
        </div>
      </div>
    </div>
    <div class="site-footer__socialtrust-container">
      <div class="site-footer__social-media-buttons">
        <div class="items-container">
          <div class="item-wrapper">
            <svg class="button-icon" onclick="window.open('{{ section.settings.facebook_link }}', '_blank');">
              <use xlink:href="#facebook"></use>
            </svg>
          </div>
          <div class="item-wrapper">
            <svg class="button-icon" onclick="window.open('{{ section.settings.instagram_link }}', '_blank');">
              <use xlink:href="#instagram"></use>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="page-width page-width-copyright">
    <div class="grid grid--no-gutters">
      <div class="grid__item medium-up--one">
        <div class="site-footer__copyright medium-up--text-left">
          {% if section.settings.enable_shop_name %}
          <small class="site-footer__copyright-content ">&copy; {{ 'now' | date: "%Y" }},
            <b>{{ shop.name | link_to: '/' }}</b></small>
          {% endif %}
          <ul class="site-footer__policies-content">
            <li><a href="/pages/terms-and-conditions">Terms & Conditions</a>&ensp;|&ensp;</li>
            <li><a href="/pages/privacy-policy">Privacy Policy</a>&ensp;|&ensp;</li>
            <li><a href="/pages/return-policy">Return Policy</a>&ensp;|&ensp;</li>
            <li><a href="/pages/cookie-policy">Cookie Policy</a></li>
          </ul>
          <div class="doubly-wrapper"></div>
        </div>
      </div>
    </div>
  </div>
</footer>
<style>
  a[class*="site-footer__logo"]:hover,  
