  .items-container {
    top: 0;
    left: 0;
    width: 76px;
    max-height: fit-content;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    background: transparent;
  }

  .item-wrapper {
    overflow: hidden;
    box-sizing: border-box;
    width: 32px;
    height: 32px;
    margin-right: 4px;
    border-style: solid;
    border-width: 0px;
    border-color: rgb(255, 255, 255);
    border-radius: 4px;
    background-color: #000;
    transition: opacity 300ms, background-color 300ms, border-color 300ms;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .item-wrapper:hover {
    background-color: #ff3b3b;
    border-color: rgba(255, 255, 255);
  }

  .item-wrapper>svg {
    width: 18px;
    height: 18px;
    transform: scale(1, -1);
    fill: rgb(255, 255, 255);
    transition: fill 300ms;
  }

  .item-wrapper:hover>svg {
    fill: rgb(255, 255, 255);
  }
  
  h3.sty_one_men_one_head {
    font-size: {{ section.settings.sty_one_main-heading_text }}px !important;

    color: {{ section.settings.sty_one_main-heading_color }};
  }

