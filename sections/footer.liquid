    font-size: {{ section.settings.menu_one_font }}px !important;
  }

  li.sty_one_men_one.site-footer__linklist-item a {
    color: {{ section.settings.menu_one_color }};
  }

  h3.sty_one_men_two_head {
    font-size: {{ section.settings.sty_one_main-heading_text }}px !important;

    color: {{ section.settings.sty_one_main-heading_color }};
  }

  li.sty_one_men_two.site-footer__linklist-item {
    font-size: {{ section.settings.menu_two_font }}px !important;
  }

  li.sty_one_men_two.site-footer__linklist-item a {
    color: {{section.settings.menu_two_color}}
;
  }

  h3.sty_one_men_one_about {
    font-size: {{ section.settings.sty_one_main-heading_text }}px !important;

    color: {{ section.settings.sty_one_main-heading_color }};
  }

  .sty_one_men_one_about_text.site-footer__linklist {
    font-size: {{ section.settings.menu_about_font }}px;

    color: {{ section.settings.menu_about_color }};
  }

  h3.sty_one_men_one_news {
    font-size: {{ section.settings.sty_one_main-heading_text }}px !important;

    color: {{ section.settings.sty_one_main-heading_color }};
  }

  label.h4.sty_one_men_one_news_text {
    color: {{ section.settings.menu_news_color }};

    font-size: {{ section.settings.menu_news_font }}px !important;
  }

  footer.site-footer.one {
    background-color: {{ section.settings.one_color }};
  }

  .secure {
    display: none;
  }

  .text_footer_1 {
    display: none;
  }

  .grid__item.medium-up--one-third.payment_001 {
    display: none;
  }

  .site-footer {
    margin-top: 50px;
    border-top: 1px solid {{ section.settings.footer_divider_color }};
  }

  .text_footer_2 {
    display: none;
  }

  @media screen and (min-width:320px) and (max-width:767px) {
    footer.site-footer .site-footer__linklist {
      margin-top: 0px;
    }

    .site-footer__newsletter {
      margin-top: 0px;
    }
  }

  .input-group {
    float: left;
    width: 100%;
    border-collapse: separate;
  }

  .newsletter_footer input#mc-embedded-subscribe {
    width: 41px !important;
    float: right;
    border-radius: 4px;
    padding: 9px 0px;
  }

  footer.site-footer input#mail {
    width: 61% !important;
    float: right;
    border-radius: 0px;
    padding: 0px 0px;
    line-height: 40px;
  }

  .newsletter_footer {
    width: 100%;
    padding-bottom: 20px;
  }

  .grid__item.medium-up--one-third.payment_001 {
    padding-top: 40px;
  }

@media screen and (max-width: 767px) {   
  .bottomlogo {
    max-width: 32px !important;
  }
}

@media (min-width: 768px) {    
  .bottomlogo {
    max-width: 128px !important;
    transform: translate(0, -15px);
    position: absolute;
  }
}
</style>

