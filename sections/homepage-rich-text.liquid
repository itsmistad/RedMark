<div class="page-width rich-text">
  {% if section.settings.section_title != blank %}
    <div class="rich-text__heading text-center">
      <h2 class="h3">{{ section.settings.section_title | escape }}</h2>
    </div>
  {% endif %}
  {% if section.settings.text != blank %}
    <div class="rich-text__text rte-setting text-center">{{ section.settings.text }}</div>
  {% endif %}
</div>

<style>
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
  }
  .page-width.rich-text {
    margin: 0 auto;
    padding: 20px 0;
  }
  .rich-text__heading h2 {
    color: {{ section.settings.header_color }};
  }
  .rich-text__text p {
    font-size: 0.875em;
    color: {{ section.settings.body_color }};
    max-width: 600px;
    margin: 0 auto;
  }
</style>

{% schema %}
  {
    "name": {
      "en": "Rich Text",
      "de": "Rich Text",
      "fr": "Texte enrichi"
    },
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": {
          "en": "Enable wide display",
          "de": "Breitbild-Display",
          "fr": "Affichage large"
        }
      },
      {
        "type": "text",
        "id": "section_title",
        "label": {
          "en": "Heading",
          "de": "Titel",
          "fr": "En-tête"
        },
        "default": {
          "en": "Talk about your brand",
          "de": "Reden Sie über Ihre Marke",
          "fr": "Parlez de votre marque"
        }
      },
      {
        "type": "richtext",
        "id": "text",
        "label": {
          "en": "Text",
          "de": "Text",
          "fr": "Texte"
        },
        "default": {
          "en": "<p>Use this text to share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>",
          "de": "<p>Nutzen Sie diesen Text, um Infos über Ihre Marke mitzuteilen. Beschreiben Sie ein Produkt, kündigen Sie etwas an oder heißen Sie Kunden willkommen.</p>",
          "fr": "<p>Utilisez ce texte pour partager des informations sur votre marque. Décrivez un produit, partagez des annonces, ou souhaitez la bienvenue à vos clients.</p>"
        }
      },
      {
        "type": "color",
        "id": "header_color",
        "label": "Header Text Color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "body_color",
        "label": "Body Text Color",
        "default": "#E8E8E8"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fff"
      }
    ],
    "presets": [
      {
        "name": {
          "en": "Rich Text",
          "de": "Rich Text",
          "fr": "Texte enrichi"
        },
        "category": {
          "en": "Text",
          "de": "Text",
          "fr": "Texte"
        }
      }
    ]
  }
{% endschema %}
